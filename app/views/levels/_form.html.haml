= form_for @level do |f|
  - if @level.errors.any?
    #error_explanation
      %h2= "#{pluralize(@level.errors.count, "error")} prohibited this level from being saved:"
      %ul
        - @level.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label 'názov:'
    = f.text_field :title
  .field
    = f.label 'režim:'
    = f.select :control, Level.controls.keys.map {|role| [role, role]}, {}
  = f.hidden_field :library_id
  .actions
    = f.submit 'pokračovať'
